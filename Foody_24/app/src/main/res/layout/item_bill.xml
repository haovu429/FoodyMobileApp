<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:id="@+id/cardview_item_bill">

    <LinearLayout
        android:id="@+id/linearlayout_item_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grad"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_diner_name"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cửa hàng"
            android:textSize="24sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:id="@+id/tv_item_amount"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="3 món"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_bill_price"
                android:layout_marginStart="20dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="120000 đ"
                android:textSize="16sp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_diner_bill_item"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/food1_diner1"
            android:scaleType="centerCrop"/>
        <!--<androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_item_cart"
            android:dividerHeight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>-->

    </LinearLayout>

</androidx.cardview.widget.CardView>
